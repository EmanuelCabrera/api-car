// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  name     String
  surname  String
  password String
  role     String
  post     Post[]
}

model Post {
  id        Int       @id @default(autoincrement())
  title     String
  content   String?
  published Boolean?  @default(false)
  validDate DateTime?
  author    User?     @relation(fields: [authorId], references: [id])
  authorId  Int?
  carId     Int
  brandId   Int
  file      File[]
}

model Car {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  brand   Brand?   @relation(fields: [brandId], references: [id])
  brandId Int?
  model   DateTime
}

model Brand {
  id   Int    @id @default(autoincrement())
  name String @unique
  car  Car[]
}

model File {
  id     Int    @id @default(autoincrement())
  name   String
  base64 String
  postId Int?
  Post   Post?  @relation(fields: [postId], references: [id])
}
